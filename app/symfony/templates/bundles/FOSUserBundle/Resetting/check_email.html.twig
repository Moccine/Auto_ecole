{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}
{% block body %}

  {% include 'common/banner.html.twig' with {
    title :'security.login.reset'|trans,
    home :'app.menu.home'|trans,
    link :  path('homepage')
  } %}

<div class="container">
  <div class="col-12">
    <div class="col-6 offset-3">
      <div class="col-12">
        {% include 'blocks/title.block.html.twig' with {
          title: 'security.login.reset',
          description: 'Modifier le mot de passe'
        } %}
      </div>
    </div>
  </div>

    <div class="authentification-wrap row">
      <!-- Form -->
      <div class="col-6 offset-3">

        <div class="content-auth">
          <div class="block-authentification">
            {% trans_default_domain 'FOSUserBundle' %}
            <p style="color: black; margin-bottom: 50px">
              {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
            </p>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}
