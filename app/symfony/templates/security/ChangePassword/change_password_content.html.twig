{% block body %}
    {% include 'common/banner.html.twig' with {
        title :'security.login.login'|trans,
        home :'app.menu.home'|trans,
        link :  path('homepage')
    } %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="white-box">
                    <div class="d-none">
                        {% include 'blocks/title.block.html.twig' with {
                            title: 'Modifier le mot de passe',
                            description: 'Modifier le mot de passe'
                        } %}
                    </div>
                    {% if error is defined %}
                        <div class="error" style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    {#----------------- content init -------------------#}
                    {% include 'common/flasbag.html.twig' %}
                    {{ form_start(form, { 'action': path('change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {{ form_widget(form) }}
                    <div>
                        <input type="submit"  class="btn btn-block hover-black color" value="{{ 'change_password.submit'|trans }}"/>
                    </div>
                    {{ form_end(form) }}
                    {#----------------- content end -------------------#}

                </div>
            </div>
            <div class="col-md-6 offset-md-3">
            </div>
        </div>
    </div>
{% endblock %}