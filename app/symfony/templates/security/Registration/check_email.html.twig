
{% extends "base.html.twig" %}

{% block body %}
    {% include 'common/banner.html.twig' with {
        title :'security.login.login'|trans,
        home :'app.menu.home'|trans,
        link :  path('homepage')
    } %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="white-box">
                    <div>
                        {% include 'blocks/title.block.html.twig' with {
                            title: 'Creation de compte',
                            description: 'Connexion'
                        } %}
                    </div>
                    {% if error is defined %}
                        <div class="error" style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <p class="alert alert-success">{{ 'registration.check_email'|trans({'%email%': user.email}) }}</p>
                    <div class="col-md-6 offset-md-3">
                        <a href="{{ path('security_login') }}" class="btn btn-lg hover-black  color">Se connecter</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
{% endblock %}

