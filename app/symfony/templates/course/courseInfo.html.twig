<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{ course_date(course) }}</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Moniteur : {{ course.instructor.lastName }} {{ course.instructor.firstName }} </li>
    <li class="list-group-item"><i class="icon-phone"></i> Moniteur : {{ course.instructor.phone }}</li>
    <li class="list-group-item"><i class="icon-phone"></i> Agence : {{ 'app.phone'|trans }}</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
