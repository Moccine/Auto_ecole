{% extends 'base.html.twig' %}
{% block body %}
  {% include 'common/banner.html.twig'  with {
    title: 'Toutes vos leçons',
    link: '#',
    home: 'La conduite'
  } %}
  <div class="container-fluid bg-white">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <div class="col-2">
            {% include 'blocks/sideMenu.html.twig' %}
          </div>
          <div class="col-8">
            <div class="col-12">
              {% include 'blocks/title.block.html.twig' with {
                title:  'Vos achats package',
                description: ' '
              } %}
            </div>
            <div class="col-lg-12">

            </div>
            {% if cards|length > 0 %}
              <table id="example" class="display" style="width:100%">
                <thead>
                <tr>
                  <th></th>
                  <th>montant(€)</th>
                  <th>Nombre d'heure acheté (h)</th>
                  <th>Nombre reservé (h)</th>
                  <th>status</th>
                  <th>Reserver des cours</th>
                  <th>voir les cours reservés </th>
                </tr>
                </thead>
                <tbody>
                {% for cardData in cardDatas %}
                  <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ cardData.card.total }}</td>
                    <td>{{ cardData.credit.courseNumber }}</td>
                    <td>{{ cardData.credit.restCourseNumber }}</td>
                    <td>{{ cardData.card.status }}</td>
                    <td><a style="color: black" href=" {{ path('package_metting_search_form', {'id' : cardData.card.id}) }}">reserver</a></td>
                    <td>  <i class="fa fa-plus-circle" aria-hidden="true"></i> </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            {% else %}
              <div class="col-lg-6 offset-3">
                <h5 class="title">Aucun achat </h5>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

  {% block stylesheets %}
  {% endblock %}


